<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task_list.TaskListFragment"
    android:background="@color/salmon_extra_light"
    >

    <Button
        android:id="@+id/clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/clear_list_button"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/salmon_dark"
        android:elevation="20dp"
        android:textColor="@color/white"
        />

    <ListView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clear_button"
        app:layout_constraintBottom_toTopOf="@id/db_version_caption"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/db_version_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="16sp"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fabSize="auto"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/salmon_dark"
        app:tint="@color/white"
        app:srcCompat="@drawable/cat_paw"
        android:contentDescription="@string/description_add_new_habit_dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>